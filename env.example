# Configurações do Banco de Dados PostgreSQL (Async)
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/instagram_api"

# Chave de Criptografia para session_id (GERAR UMA CHAVE SEGURA!)
# Você pode gerar uma com `python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"`
ENCRYPTION_KEY=""

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Instagram Credentials (use multiple accounts for rotation)
# As contas logadas via API serão salvas no banco de dados.
INSTAGRAM_SESSION_ID_1=
INSTAGRAM_SESSION_ID_2=
# Add more as needed (INSTAGRAM_SESSION_ID_3, etc.)

# Configurações da API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Logging
LOG_LEVEL=INFO 